<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberMapper">
	<select id="getTime" resultType="String">
		SELECT sysdate FROM dual
	</select>
	
	<insert id="signup" parameterType="Member">
		INSERT INTO member(id, pwd, name, email, 
		<!-- tel, birthday, gender, zipcode, address, point,  -->
		author, reg_date) 
			VALUES (#{id}, #{pwd}, #{name}, #{email}, 
		<!-- 	#{tel}, #{birthday}, #{gender}, #{zipcode}, #{address}, 0, -->
			 0, sysdate)
	</insert>
	
	<select id="login" parameterType="Hashmap" resultType="Member">
		SELECT id, pwd FROM member WHERE id = #{id}
	</select>

</mapper>